{
  "manifest_version": 3,
  "name": "alper-prototype",
  "version": "0.0",
  "description": "알퍼 프로토타입 제작",
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "scripts/constants.js",
        "scripts/api.js",
        "scripts/storage.js",
        "scripts/permission.js"
      ]
    },
    {
      "matches": [
        "https://school.programmers.co.kr/*"
      ],
      "js": [
        "scripts/programmers.js",
        "scripts/constants.js",
        "scripts/status-message.js",
        "scripts/storage.js",
        "scripts/commit.js",
        "scripts/github.js",
        "scripts/parser.js",
        "scripts/api.js"
      ]
    },
    {
      "matches": [
        "https://leetcode.com/*"
      ],
      "js": [
        "scripts/leetcodes.js",
        "scripts/constants.js",
        "scripts/status-message.js",
        "scripts/storage.js",
        "scripts/commit.js",
        "scripts/github.js",
        "scripts/parser.js",
        "scripts/api.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
    }
}
