{
  "manifest_version": 3,
  "name": "alper-prototype",
  "version": "0.0",
  "description": "알퍼 프로토타입 제작",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
